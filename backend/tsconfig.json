{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": ".",
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "strict": true
  },
  "types": [
    "node",
    "@types/express",
    "@prisma/client"
  ],
  "include": [
    "./",
    "./**/*.ts",
    "./**/*.js",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.*",
    "src/plugins/**"
  ]
}
